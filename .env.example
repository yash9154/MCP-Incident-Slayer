# ──────────────────────────────────────────────────────────────
# MCP Incident Slayer — Environment Configuration
# Copy this to .env and fill in your values
# ──────────────────────────────────────────────────────────────

# Express server port
PORT=4000

# SQLite database path (file-based persistence)
DB_PATH=./data/incident-slayer.db

# ── Archestra Platform ──────────────────────────────────────
ARCHESTRA_URL=http://localhost:9000
ARCHESTRA_API_KEY=your-archestra-api-key-here

# ── LLM Configuration ──────────────────────────────────────
# Ollama (local, fast first-pass)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# OpenAI (deep analysis fallback)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Anthropic (deep analysis fallback)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ── Integrations ────────────────────────────────────────────
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
GITHUB_TOKEN=your-github-token-here
GITHUB_REPO=your-org/your-repo

# ── Observability ───────────────────────────────────────────
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
